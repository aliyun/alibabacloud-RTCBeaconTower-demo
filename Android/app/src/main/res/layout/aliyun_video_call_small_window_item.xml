<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/alivc_video_call_item_width"
    android:layout_height="@dimen/alivc_video_call_item_width"
    android:background="@color/alivc_common_bg_black"
    android:layout_marginRight="@dimen/margin_4"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/frame_remote_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/alivc_common_bg_black">

    </FrameLayout>

    <TextView
        android:id="@+id/tv_videocall_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:lines="1"
        android:gravity="center"
        android:textColor="@color/alivc_common_font_white"
        android:textSize="@dimen/alivc_common_font_16" />
</FrameLayout>
