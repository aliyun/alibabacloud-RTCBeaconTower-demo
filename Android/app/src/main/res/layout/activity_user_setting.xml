<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_104"
        android:background="@drawable/user_setting_bg_lines" />

    <ImageView
        android:id="@+id/iv_user_avatar_bg"
        android:layout_width="@dimen/dimen_339"
        android:layout_height="@dimen/dimen_339"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_55"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/iv_user_avatar"
        android:layout_width="@dimen/dimen_100"
        android:layout_height="@dimen/dimen_100"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_174"
        android:src="@drawable/face" />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_20"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_20"
        android:gravity="center"
        android:text="ID:26383910"
        android:textColor="@android:color/white"
        android:textSize="@dimen/alivc_common_font_14" />


    <TextView
        android:id="@+id/tv_change_user"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44"
        android:layout_alignParentBottom="true"
        android:background="#373d41"
        android:gravity="center"
        android:text="@string/aliyun_create_channel"
        android:textColor="@color/alivc_common_font_white"
        android:textSize="@dimen/alivc_common_font_16" />


</RelativeLayout>